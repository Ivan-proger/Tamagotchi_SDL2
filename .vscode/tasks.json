{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build Tamagotchi Game",
        "type": "shell",
        "command": "C:\\msys64\\mingw64\\bin\\gcc.exe",
        "args": [
          "-fdiagnostics-color=always",
          "-g",
          "src/main.c",
          "src/graphics.c",
          "-o",
          "${workspaceFolder}\\game.exe",
          "-I", "${workspaceFolder}\\include",
          "-I", "C:\\msys64\\mingw64\\include\\SDL2",
          "-L", "C:\\msys64\\mingw64\\lib",
          "-lmingw32",
          "-lSDL2main",
          "-lSDL2",
          "-lSDL2_image",          
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }
  