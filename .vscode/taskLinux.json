{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Tamagotchi Game",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "src/main.c",
        "src/graphics.c",
        "-o",
        "${workspaceFolder}/game",
        "-I", "${workspaceFolder}/include",
        "-lSDL2main",
        "-lSDL2",
        "-lSDL2_image",  
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
